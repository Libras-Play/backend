# Environment variables for local development
# Copy to .env and customize

# Content Service
DATABASE_URL=postgresql+asyncpg://postgres:postgres_local_pass@localhost:5432/content_db
AWS_REGION=us-east-1
ENVIRONMENT=local
LOG_LEVEL=DEBUG
COGNITO_POOL_ID=
COGNITO_CLIENT_ID=
SECRETS_MANAGER_ARN=

# User Service
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
DYNAMODB_USERS_TABLE=users
DYNAMODB_PROGRESS_TABLE=user_progress

# ML Service
S3_BUCKET=ml-models-local
SAGEMAKER_ENDPOINT=
MODEL_PATH=/models
DEFAULT_MODEL_NAME=sign_language_classifier.pth
