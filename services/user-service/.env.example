# App Configuration
APP_NAME=User Service
VERSION=1.0.0
ENVIRONMENT=local
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# DynamoDB (LocalStack for local development)
DYNAMODB_ENDPOINT=http://localstack:4566
DYNAMODB_USER_TABLE=UserData
DYNAMODB_PROGRESS_TABLE=UserProgress
DYNAMODB_AI_SESSIONS_TABLE=AiSessions

# S3 Configuration
S3_BUCKET=senas-user-media
S3_ENDPOINT=http://localstack:4566

# SNS Configuration
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:user-notifications

# Gamification Settings
LIVES_MAX=5
LIVES_REGEN_MINUTES=30
XP_PER_LEVEL=100
STREAK_HOURS_THRESHOLD=48

# CORS
CORS_ORIGINS=["*"]
